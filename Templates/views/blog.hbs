    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blog</title>
    <link href="css/style.css" rel="stylesheet" />
    <link
      rel="stylesheet"
      href="https://use.fontawesome.com/releases/v5.15.4/css/all.css/"
    />
    <style>
      .blog{ display: flex; flex-direction: row-reverse; } .blog p{ max-width:
      50%; line-height: 50px; font-family: Cambria, Cochin, Georgia, Times,
      'Times New Roman', serif; font-size: 25px; padding-left: 20px; margin-top:
      50px; } .blog img{ position: absolute; left: 50px; max-width: 50%; width:
      40%; height: 50%; border: 5px solid antiquewhite; border-radius: 28px;
      margin-top: 30px; } .blog1{ display: flex; flex-direction: row; } .blog1
      p{ max-width: 50%; line-height: 50px; font-family: Cambria, Cochin,
